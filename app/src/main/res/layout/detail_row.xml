<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="70dp"
    android:layout_height="56dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:id="@+id/details_icon"
        android:contentDescription="@string/icon_desc" />

    <TextView
        android:id="@+id/details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignTop="@+id/details_icon"
        android:layout_toRightOf="@+id/details_icon"
        android:layout_toEndOf="@+id/details_icon" />

    <TextView
        android:id="@+id/details_text_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_icon"
        android:layout_toRightOf="@+id/details_icon"
        android:layout_toEndOf="@+id/details_icon" />

</RelativeLayout>